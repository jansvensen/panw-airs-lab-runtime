server {
        listen 80;
        server_name your-host.your.domain;
        return 301 https://your-host.your.domain$request_uri;
}

server {
    listen 443 ssl;
    server_name your-host.your.domain;

    location / {
        proxy_pass http://localhost:3080;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

        ssl_certificate     /etc/letsencrypt/live/your-host.your.domain/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/your-host.your.domain/privkey.pem;
        ssl_protocols       TLSv1.2;

}